-- Hatching Tab
local HatchingTab = Window:CreateTab("Hatching")

local Eggs = {"Starter Egg", "Forest Egg", "Beach Egg"} -- replace with real egg names
local SelectedEgg = Eggs[1]

HatchingTab:CreateDropdown({
    Name = "Select Egg",
    Options = Eggs,
    CurrentOption = Eggs[1],
    Flag = "SelectedEgg",
    Callback = function(opt)
        SelectedEgg = opt
    end,
})

HatchingTab:CreateToggle({
    Name = "Auto Hatch (Max)",
    CurrentValue = false,
    Flag = "AutoHatch",
    Callback = function(state)
        if state then
            AutoHatch = true
            task.spawn(function()
                while AutoHatch do
                    task.wait(1)
                    -- remote:InvokeServer("Hatch Egg", SelectedEgg, "Max")
                end
            end)
        else
            AutoHatch = false
        end
    end,
})

