local selGarage,selItem,selGB,selIB=nil,nil,nil,nil
local gB={}
local function makeG(n,p)
local b=Instance.new("TextButton",p)
b.Size=UDim2.new(1,-10,0,40)
b.Position=UDim2.new(0,5,0,0)
b.BackgroundColor3=Color3.fromRGB(60,60,70)
b.Text=n
b.TextColor3=Color3.fromRGB(255,255,255)
b.TextXAlignment=Enum.TextXAlignment.Left
b.Font=Enum.Font.Gotham
b.TextSize=14
b.BorderSizePixel=0
Instance.new("UICorner",b).CornerRadius=UDim.new(0,6)
Instance.new("UIPadding",b).PaddingLeft=UDim.new(0,10)
b.MouseEnter:Connect(function()if b~=selGB then b.BackgroundColor3=Color3.fromRGB(80,80,90)end end)
b.MouseLeave:Connect(function()if b~=selGB then b.BackgroundColor3=Color3.fromRGB(60,60,70)end end)
b.MouseButton1Click:Connect(function()if selGB then selGB.BackgroundColor3=Color3.fromRGB(60,60,70)end
b.BackgroundColor3=Color3.fromRGB(100,150,200)
selGB=b
selGarage=n
sG.Text="Auction: "..n
sList.Visible=false end)
return b
end
local function makeI(id,d,p)
local b=Instance.new("TextButton",p)
b.Size=UDim2.new(1,-10,0,50)
b.Position=UDim2.new(0,5,0,0)
b.BackgroundColor3=Color3.fromRGB(60,60,70)
b.Text=""
b.BorderSizePixel=0
Instance.new("UICorner",b).CornerRadius=UDim.new(0,6)
local nL=Instance.new("TextLabel",b)
nL.Size=UDim2.new(0.7,-5,0.5,0)
nL.Position=UDim2.new(0,10,0,5)
nL.BackgroundTransparency=1
nL.Text=d.Name
nL.TextColor3=Color3.fromRGB(255,255,255)
nL.TextXAlignment=Enum.TextXAlignment.Left
nL.Font=Enum.Font.GothamBold
nL.TextSize=14
local pL=Instance.new("TextLabel",b)
pL.Size=UDim2.new(0.3,-5,0.5,0)
pL.Position=UDim2.new(0.7,5,0,5)
pL.BackgroundTransparency=1
pL.Text="$"..d.Price
pL.TextColor3=Color3.fromRGB(100,255,100)
pL.TextXAlignment=Enum.TextXAlignment.Right
pL.Font=Enum.Font.Gotham
pL.TextSize=14
local rL=Instance.new("TextLabel",b)
rL.Size=UDim2.new(0.5,-5,0.5,0)
rL.Position=UDim2.new(0,10,0.5,0)
rL.BackgroundTransparency=1
rL.Text=d.Rarity
rL.TextColor3=colors[d.Rarity]or Color3.fromRGB(255,255,255)
rL.TextXAlignment=Enum.TextXAlignment.Left
rL.Font=Enum.Font.Gotham
rL.TextSize=12
local cL=Instance.new("TextLabel",b)
cL.Size=UDim2.new(0.5,-5,0.5,0)
cL.Position=UDim2.new(0.5,0,0.5,0)
cL.BackgroundTransparency=1
cL.Text=d.Category
cL.TextColor3=Color3.fromRGB(180,180,180)
cL.TextXAlignment=Enum.TextXAlignment.Right
cL.Font=Enum.Font.Gotham
cL.TextSize=12
b.MouseEnter:Connect(function()if b~=selIB then b.BackgroundColor3=Color3.fromRGB(80,80,90)end end)
b.MouseLeave:Connect(function()if b~=selIB then b.BackgroundColor3=Color3.fromRGB(60,60,70)end end)
b.MouseButton1Click:Connect(function()if selIB then selIB.BackgroundColor3=Color3.fromRGB(60,60,70)end
b.BackgroundColor3=Color3.fromRGB(100,150,200)
selIB=b
selItem=d
sI.Text="Item: "..d.Name.." ($"..d.Price..")"
iSList.Visible=false end)
return b
end
for _,g in pairs(gMod)do
local b=makeG(g.Name,gFrame)
b.Parent=gFrame
table.insert(gB,b)
end
gFrame.CanvasSize=UDim2.new(0,0,0,#gB*45)
for i,d in pairs(iMod)do
makeI(i,d,iFrame).Parent=iFrame
end
iFrame.CanvasSize=UDim2.new(0,0,0,table.count(iMod)*55)
sInp.Changed:Connect(function()
local t=sInp.Text:lower()
if t==""then sList.Visible=false return end
for _,c in pairs(sList:GetChildren())do if c:IsA"TextButton"then c:Destroy()end end
local matches={}
for _,g in pairs(gMod)do
if g.Name:lower():sub(1,#t)==t then table.insert(matches,g)end
end
table.sort(matches,function(a,b)return a.Name<b.Name end)
for i=1,math.min(3,#matches)do
local b=makeG(matches[i].Name,sList)
b.BackgroundColor3=Color3.fromRGB(70,70,80)
b.Size=UDim2.new(1,-10,0,35)
b.TextSize=12
b.Parent=sList
end
sList.Size=UDim2.new(0.5,-25,0,#sList:GetChildren()*37)
sList.Visible=#sList:GetChildren()>0
end)
iInp.Changed:Connect(function()
local t=iInp.Text:lower()
if t==""then iSList.Visible=false return end
for _,c in pairs(iSList:GetChildren())do if c:IsA"TextButton"then c:Destroy()end end
local matches={}
for id,d in pairs(iMod)do
if d.Name:lower():sub(1,#t)==t then table.insert(matches,{id=id,data=d})end
end
table.sort(matches,function(a,b)return a.data.Name<b.data.Name end)
for i=1,math.min(3,#matches)do
local m=matches[i]
local b=makeI(m.id,m.data,iSList)
b.BackgroundColor3=Color3.fromRGB(70,70,80)
b.Size=UDim2.new(1,-10,0,45)
b.Parent=iSList
end
iSList.Size=UDim2.new(0.5,-25,0,#iSList:GetChildren()*47)
iSList.Visible=#iSList:GetChildren()>0
end)
btn.MouseButton1Click:Connect(function()
if selGarage and selItem then
print("Selected:",selGarage,selItem.Name)
end
end)
btn.MouseEnter:Connect(function()btn.BackgroundColor3=Color3.fromRGB(90,150,220)end)
btn.MouseLeave:Connect(function()btn.BackgroundColor3=Color3.fromRGB(70,130,200)end)
tween:Create(load,TweenInfo.new(0.5,Enum.EasingStyle.Quad),{BackgroundTransparency=1}):Play()
wait(0.5)
load.Visible=false
main.Visible=true
