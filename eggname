local Players = game:GetService("Players")
local VirtualInputManager = game:GetService("VirtualInputManager")
local player = Players.LocalPlayer

local egg = workspace.Rendered.Generic[EGG_NAME]

if egg and player.Character then
    local humanoidRootPart = player.Character:FindFirstChild("HumanoidRootPart")
    local eggPart = egg.PrimaryPart or egg:FindFirstChildWhichIsA("BasePart")
    
    if humanoidRootPart and eggPart then
        humanoidRootPart.CFrame = eggPart.CFrame
        
        while true do
            VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.E, false, game)
            VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.E, false, game)
            task.wait(0.1)
        end
    end
end
