-- Teleport player
local player = game:GetService("Players").LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
humanoidRootPart.CFrame = CFrame.new(-21778.83, 8.07, -20468.38)

-- Load external script
loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/refs/heads/main/BGSI/main.lua"))()

-- Auto equip loop
task.spawn(function()
    while task.wait(10) do
        local equipArgs = {"EquipBestPets"}
        pcall(function()
            game:GetService("ReplicatedStorage")
                :WaitForChild("Shared")
                :WaitForChild("Framework")
                :WaitForChild("Network")
                :WaitForChild("Remote")
                :WaitForChild("RemoteEvent")
                :FireServer(unpack(equipArgs))
        end)
    end
end)

-- Auto sell loop
task.spawn(function()
    while task.wait(5) do
        local sellArgs = {"SellAllFish"}
        pcall(function()
            game:GetService("ReplicatedStorage")
                :WaitForChild("Shared")
                :WaitForChild("Framework")
                :WaitForChild("Network")
                :WaitForChild("Remote")
                :WaitForChild("RemoteEvent")
                :FireServer(unpack(sellArgs))
        end)
    end
end)
