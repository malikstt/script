_G.Config = {
    UserID = "3087df52-2f5c-4e6f-a407-10fa72d16932",
    discord_id = "1135837863603351573", 
    Note = "Pc"
}

local VirtualInputManager = game:GetService("VirtualInputManager")
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local remote = game:GetService("ReplicatedStorage"):WaitForChild("Shared"):WaitForChild("Framework"):WaitForChild("Network"):WaitForChild("Remote"):WaitForChild("RemoteEvent")
local screenSize = workspace.CurrentCamera.ViewportSize
local touchPosition = Vector2.new(screenSize.X / 2, screenSize.Y / 2)
local shops = {"dice-shop", "traveling-merchant", "shard-shop", "alien-shop", "shadow-shop", "festival-shop"}
local gameId = game.PlaceId
local startTime = os.time()

local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "BlackScreen"
gui.IgnoreGuiInset = true
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0)
frame.Position = UDim2.new(0, 0, 0, 0)
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BorderSizePixel = 0
frame.Parent = gui

local function openBoxes()
    while true do
        local boxType = math.random() < 0.99 and "Mystery Box" or "Shadow Mystery Box"
        local args = {"UseGift", boxType, 25}
        remote:FireServer(unpack(args))
        VirtualInputManager:SendMouseButtonEvent(touchPosition.X, touchPosition.Y, 0, true, game, 1)
        task.wait(0.05)
        VirtualInputManager:SendMouseButtonEvent(touchPosition.X, touchPosition.Y, 0, false, game, 1)
        task.wait(0.05)
    end
end

local function buyShopItems()
    for _, shop in ipairs(shops) do
        for column = 1, 3 do
            local args = {"BuyShopItem", shop, column, true}
            remote:FireServer(unpack(args))
            task.wait(0.1)
        end
    end
end

while true do
    if os.time() - startTime >= 1800 then
        TeleportService:Teleport(gameId)
        task.wait(5)
    end
    
    buyShopItems()
    openBoxes()
    task.wait(1)
end
