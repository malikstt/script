-- Optimized ScreenCover GUI + Performance Kill + Auto Dice Loader

-- Fullscreen White GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false
ScreenGui.Name = "WhiteCover"
ScreenGui.Parent = game:GetService("CoreGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(1,0,1,0)
Frame.Position = UDim2.new(0,0,0,0)
Frame.BackgroundColor3 = Color3.new(1,1,1)
Frame.Visible = false
Frame.Parent = ScreenGui

local Toggle = Instance.new("TextButton")
Toggle.Size = UDim2.new(0,200,0,50)
Toggle.Position = UDim2.new(0.5,-100,0.9,-25)
Toggle.BackgroundColor3 = Color3.new(0.1,0.1,0.1)
Toggle.TextColor3 = Color3.new(1,1,1)
Toggle.Text = "Enable Screen Cover"
Toggle.Parent = ScreenGui

local enabled = false
Toggle.MouseButton1Click:Connect(function()
    enabled = not enabled
    Frame.Visible = enabled
    Toggle.Text = enabled and "Disable Screen Cover" or "Enable Screen Cover"
end)

-- Kill Textures & Decals for Performance
task.spawn(function()
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Texture") or obj:IsA("Decal") then
            obj:Destroy()
        end
    end
    workspace.DescendantAdded:Connect(function(obj)
        if obj:IsA("Texture") or obj:IsA("Decal") then
            obj:Destroy()
        end
    end)
end)

-- Dice Settings
getgenv().boardSettings = {
    UseGoldenDice = true,
    GoldenDiceDistance = 1,
    DiceDistance = 6,
    GiantDiceDistance = 10,
}
getgenv().remainingItems = {}

-- Load Script
loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/refs/heads/main/BGSI/main.lua"))()
