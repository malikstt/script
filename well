-- Spam-clicker for a fixed screen position (phone). Paste into your executor. NO explanation.
local TARGET = Vector2.new(1533.47, 463.94) -- exact position you gave
local CLICK_INTERVAL = 0.06 -- seconds between clicks (edit if you want faster/slower)
local HOLD_TIME = 0.02 -- how long the press is held

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")
local UIS = game:GetService("UserInputService")
local vim = game:GetService("VirtualInputManager")

-- GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SpamClickerGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

local frame = Instance.new("Frame", screenGui)
frame.AnchorPoint = Vector2.new(0,0)
frame.Position = UDim2.new(0, 10, 0, 60)
frame.Size = UDim2.new(0, 180, 0, 46)
frame.BackgroundTransparency = 0.15
frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
frame.BorderSizePixel = 0
local corner = Instance.new("UICorner", frame); corner.CornerRadius = UDim.new(0,8)

local btn = Instance.new("TextButton", frame)
btn.Size = UDim2.new(1, -8, 1, -8)
btn.Position = UDim2.new(0,4,0,4)
btn.Text = "SPAM: OFF"
btn.Font = Enum.Font.SourceSansBold
btn.TextSize = 16
btn.TextColor3 = Color3.fromRGB(230,230,230)
btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
btn.BorderSizePixel = 0
local bcorner = Instance.new("UICorner", btn); bcorner.CornerRadius = UDim.new(0,6)

-- State
local spamming = false
local spamThread = nil

local function safeSendClick(x,y)
    pcall(function()
        vim:SendMouseButtonEvent(x, y, true, game)
    end)
    task.wait(HOLD_TIME)
    pcall(function()
        vim:SendMouseButtonEvent(x, y, false, game)
    end)
end

local function startSpam()
    if spamming then return end
    spamming = true
    btn.Text = "SPAM: ON"
    btn.BackgroundColor3 = Color3.fromRGB(20,100,20)
    spamThread = task.spawn(function()
        while spamming do
            safeSendClick(TARGET.X, TARGET.Y)
            task.wait(CLICK_INTERVAL)
        end
    end)
end

local function stopSpam()
    spamming = false
    btn.Text = "SPAM: OFF"
    btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
    -- spamThread will end naturally
end

btn.MouseButton1Click:Connect(function()
    if spamming then
        stopSpam()
    else
        startSpam()
    end
end)

-- Optional: toggle with screen touch (not the button) â€” useful on phone
UIS.InputBegan:Connect(function(input, processed)
    if processed then return end
    if input.UserInputType == Enum.UserInputType.Touch then
        -- short tap toggles spam (avoid interfering with button)
        local pos = input.Position
        -- if tap is outside our button, toggle
        local absPos = frame.AbsolutePosition
        local size = frame.AbsoluteSize
        local inButton = pos.X >= absPos.X and pos.X <= absPos.X + size.X and pos.Y >= absPos.Y and pos.Y <= absPos.Y + size.Y
        if not inButton then
            if spamming then stopSpam() else startSpam() end
        end
    end
end)
