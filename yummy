repeat task.wait() until game:IsLoaded()
local lp = game.Players.LocalPlayer
repeat task.wait() until lp:FindFirstChild("PlayerGui")
task.wait(math.random(0,3000)/1000)
local g = lp.PlayerGui:FindFirstChild("ScreenGui")
if g and g:FindFirstChild("DailyRewards") then
    g.DailyRewards:Destroy()
end
task.spawn(function()
    local RS = game:GetService("ReplicatedStorage")
    local SecretBountyUtil = require(RS.Shared.Utils.Stats.SecretBountyUtil)

    local bounty = SecretBountyUtil.Get(SecretBountyUtil)
    local eggName = bounty.Egg

    local Players = game:GetService("Players")
    local player = Players.LocalPlayer
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    local egg = workspace.Rendered.Generic:FindFirstChild(eggName)
    if not egg then return end

    local part = egg.PrimaryPart or egg:FindFirstChildWhichIsA("BasePart")
    if not part then return end

    hrp.CFrame = part.CFrame

    local vim = game:GetService("VirtualInputManager")
    while true do
        vim:SendKeyEvent(true, "E", false, game)
        task.wait(0.1)
        vim:SendKeyEvent(false, "E", false, game)
        task.wait(0.1)
    end
end)
