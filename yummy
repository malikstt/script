task.spawn(function()
    while true do
        local c = game.Players.LocalPlayer.Character
        if c and c:FindFirstChild("HumanoidRootPart") then
            c.HumanoidRootPart.CFrame = CFrame.new(197.80, 9.60, 188.36)
        end
        task.wait(60)
    end
end)

pcall(function()
    require(game:GetService("ReplicatedStorage").Client.Effects.HatchEgg).Play = function() return end
end)

task.spawn(function()
    local v = game:GetService("VirtualInputManager")
    while true do
        v:SendKeyEvent(true,"E",false,game)
        v:SendKeyEvent(false,"E",false,game)
        task.wait()
    end
end)

task.spawn(function()
    getgenv().waitTime = 2.5
    local RS = game:GetService("ReplicatedStorage")
    local Remote = require(RS.Shared.Framework.Network.Remote)
    local LocalData = require(RS.Client.Framework.Services.LocalData)

    while true do
        local data = LocalData:Get().Powerups
        for _,box in ipairs({"OG Mystery Box","Admin Mystery Box"}) do
            local am = data[box] or 0
            if am > 0 then
                Remote:FireServer("UseGift", box, (am > 25 and 25 or am))
                task.wait(getgenv().waitTime)
            end
        end
        task.wait()
    end
end)

task.spawn(function()
    local RS = game:GetService("ReplicatedStorage")
    local Root = RS.Shared.Framework.Network.Remote
    local Event = Root.RemoteEvent
    local Func = Root.RemoteFunction
    while true do
        Event:FireServer("ClaimOGFreeWheelSpin")
        Func:InvokeServer("OGWheelSpin")
        task.wait(10)
    end
end)

task.spawn(function()
    local vu = game:GetService("VirtualUser")
    game:GetService("Players").LocalPlayer.Idled:Connect(function()
        vu:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
        task.wait(1)
        vu:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
    end)
end)
