repeat task.wait() until game:IsLoaded()
local lp = game.Players.LocalPlayer
repeat task.wait() until lp:FindFirstChild("PlayerGui")
task.wait(math.random(0,3000)/1000)

local g = lp.PlayerGui:FindFirstChild("ScreenGui")
if g and g:FindFirstChild("DailyRewards") then
    g.DailyRewards:Destroy()
end
local Players = game:GetService("Players")
local VirtualUser = game:GetService("VirtualUser")
local lp = Players.LocalPlayer

lp.Idled:Connect(function()
    VirtualUser:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
    task.wait(1)
    VirtualUser:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
end)

require(game:GetService("ReplicatedStorage").Client.Effects.HatchEgg).Play = function() return end

getgenv().Settings = getgenv().Settings or {}
getgenv().Settings.GemGenie = {
    Enabled = true,
    FallbackEgg = "Winter Egg",
    AutoSellWhileBubbling = true,

    TargetedRewards     = { "Dream Shard" },
    RerollUntilTarget   = true,
    MaxRerolls          = 20,

    Rift = {
        Enabled                 = false,
        AutoSummon              = true,
        AutoTeleport            = true,
        AutoRespawn             = true,
        RiftName                = "Winter Egg",
        DurationMinutes         = 15,
        LuckMultiplier          = 10,
        HunterEnabled           = true,
        HunterMinLuck           = 10,
        HunterTargetHighestLuck = true,
        HunterRiftsToHunt       = {"Winter Egg"},
    },
}

loadstring(game:HttpGet("https://raw.githubusercontent.com/issascripts/bgsi/refs/heads/main/sillylittlegemgeniescript.lua"))()
