repeat task.wait() until game:IsLoaded()
local lp=game.Players.LocalPlayer
repeat task.wait() until lp:FindFirstChild("PlayerGui")
task.wait(math.random(0,3000)/1000)
local g=lp.PlayerGui:FindFirstChild("ScreenGui")
if g and g:FindFirstChild("DailyRewards") then g.DailyRewards:Destroy() end

loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/main/Loader"))()

task.spawn(function()
    require(game:GetService("ReplicatedStorage").Client.Effects.HatchEgg).Play=function()return end
end)

task.spawn(function()
    while true do
        local hrp=lp.Character:WaitForChild("HumanoidRootPart")
        hrp.CFrame=CFrame.new(132.47,9.73,97.12)
        task.wait(60)
    end
end)

task.spawn(function()
    local vim=game:GetService("VirtualInputManager")
    while true do
        vim:SendKeyEvent(true,"E",false,game)
        vim:SendKeyEvent(false,"E",false,game)
        task.wait()
    end
end)

task.wait(90)

local RS=game:GetService("ReplicatedStorage")
local D=require(RS.Client.Framework.Services.LocalData)
local R=RS.Shared.Framework.Network.Remote.RemoteEvent
local M=require(RS.Shared.Data.Pets)

task.spawn(function()
    while true do
        local a=D:Get()
        if a and a.Pets then
            local e={}
            local t=a.Teams and a.TeamEquipped and a.Teams[a.TeamEquipped]
            if t and t.Pets then for _,v in ipairs(t.Pets) do e[v]=true end end
            local s={}
            for _,p in pairs(a.Pets) do
                local i=M[p.Name]
                if i and i.Rarity=="Secret" then table.insert(s,p.Id) end
            end
            local c=0
            for _,id in ipairs(s) do
                if c>=8 then break end
                if not e[id] then R:FireServer("EquipPet",id) task.wait(.15) end
                c=c+1
            end
            for id in pairs(e) do
                local keep=false
                for i=1,math.min(8,#s) do if id==s[i] then keep=true end end
                if not keep then R:FireServer("UnequipPet",id) task.wait(.15) end
            end
        end
        task.wait(.3)
    end
end)

local Players=game:GetService("Players")
local LocalData=require(RS.Client.Framework.Services.LocalData)
local RemoteEvent=RS.Shared.Framework.Network.Remote.RemoteEvent
local target="secret-hunter"
local done={}

task.spawn(function()
    while true do
        local data=LocalData:Get()
        if data and data.Teams and data.TeamEquipped then
            local team=data.Teams[data.TeamEquipped]
            if team and team.Pets then
                for _,petId in ipairs(team.Pets) do
                    if not done[petId] then
                        local pet
                        for _,p in ipairs(data.Pets or {}) do if p.Id==petId then pet=p break end end
                        if pet then
                            local has=false
                            for _,e in ipairs(pet.Enchants or {}) do if e.Id==target then has=true break end end
                            if has then
                                done[petId]=true
                            else
                                RemoteEvent:FireServer("UseShadowCrystal",petId)
                            end
                        end
                    end
                    task.wait(0.1)
                end
            end
        end
        task.wait(0.1)
    end
end)
