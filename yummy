task.wait(15)
setfpscap(5)

-- FOCUS DICE SETTINGS
FOCUS_DICE = true
ALWAYS_DICE_CHEST = true
USE_GOLDEN_DICE = true
GOLDEN_DICE_DISTANCE = 1
DICE_DISTANCE = 9
GIANT_DICE_DISTANCE = 50

-- LOAD FOCUS DICE SCRIPT
loadstring(game:HttpGet("https://raw.githubusercontent.com/malikstt/script/main/w1"))()

-- WEBHOOK SENDER (WAVE EXECUTOR)
local function sendWebhook(url, data)
    local req = wave and wave.request
    if not req then return end
    req({
        Url = url,
        Method = "POST",
        Headers = {["content-type"] = "application/json"},
        Body = game:GetService("HttpService"):JSONEncode(data)
    })
end

-- ELIXIR CHECKER + SEND LOOP
task.spawn(function()
    local player = game:GetService("Players").LocalPlayer
    local gui = player:WaitForChild("PlayerGui")

    local function isText(o)
        return o:IsA("TextLabel") or o:IsA("TextButton") or o:IsA("TextBox")
    end

    local function waitForBuffs()
        local buffs
        repeat
            buffs = gui:FindFirstChild("Buffs", true)
            if not buffs then task.wait(0.1) end
        until buffs
        return buffs
    end

    local function getElixir()
        local buffs = waitForBuffs()
        local folder = buffs:FindFirstChild("Infinity Elixir")
        if not folder then return nil end

        local btn = folder:FindFirstChild("Button")
        if not btn then return nil end

        local label = btn:FindFirstChild("Label")
        if not (label and isText(label)) then return nil end

        local t = label.Text
        if string.find(t, "days") or string.find(t, "hours") then
            return t
        end

        return nil
    end

    while true do
        local e = getElixir()
        local msg = "**" .. player.Name .. "**\n"

        if e then
            msg = msg .. "Elixir â†’ " .. e
        else
            msg = msg .. "No Elixir found"
        end

        sendWebhook(
            "https://discord.com/api/webhooks/1438235226261426277/epAuKNwoDb5lJ_A9bgdoDKKtZVRJbEuYVWGeyoBMSDoooWaDifn1AoeKnLohP5B6awii",
            {content = msg}
        )

        task.wait(1800) -- every 30 mins
    end
end)
